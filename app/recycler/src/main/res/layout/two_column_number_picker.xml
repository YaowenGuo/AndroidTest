<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/zixi_number_picker_title1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="小时"
        android:textColor="#FF8F97B3"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/zixi_number_picker_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/zixi_number_picker_title2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分钟"
        android:textColor="#FF8F97B3"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/zixi_number_picker_title1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <NumberPicker
        android:id="@+id/zixi_mumber_picker1"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:focusable="false"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toStartOf="@id/zixi_mumber_picker2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zixi_number_picker_title1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>


    <NumberPicker
        android:id="@+id/zixi_mumber_picker2"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:focusable="false"
        android:gravity="start"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/zixi_mumber_picker1"
        app:layout_constraintTop_toBottomOf="@id/zixi_number_picker_title2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <View
        app:layout_constraintTop_toTopOf="@id/zixi_mumber_picker1"
        app:layout_constraintBottom_toBottomOf="@id/zixi_mumber_picker1"
        app:layout_constraintVertical_bias="0.333"
        android:background="#F2F2F5"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>
    <View
        app:layout_constraintTop_toTopOf="@id/zixi_mumber_picker1"
        app:layout_constraintBottom_toBottomOf="@id/zixi_mumber_picker1"
        app:layout_constraintVertical_bias="0.6666"
        android:background="#F2F2F5"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>